# Youtify - Environment Configuration
# Copy this file to .env and fill in your API credentials

# =============================================================================
# REQUIRED CREDENTIALS
# =============================================================================

# YouTube Data API v3 Key
# Get from: https://console.cloud.google.com/
# 1. Create/select a project
# 2. Enable YouTube Data API v3
# 3. Create credentials (API Key)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Spotify Web API Credentials
# Get from: https://developer.spotify.com/dashboard/
# 1. Create a new app
# 2. Add redirect URI: http://localhost:8501
# 3. Copy Client ID and Client Secret
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Spotify User ID (auto-detected if not provided)
SPOTIFY_USER_ID=

# Application Settings
DEBUG_MODE=false

# Matching Thresholds (0.0 - 1.0)
HIGH_CONFIDENCE_THRESHOLD=0.8
MEDIUM_CONFIDENCE_THRESHOLD=0.5
LOW_CONFIDENCE_THRESHOLD=0.3

# API Rate Limiting
YOUTUBE_REQUESTS_PER_MINUTE=60
SPOTIFY_REQUESTS_PER_MINUTE=100

# Cache Settings
ENABLE_CACHING=true
CACHE_DURATION_HOURS=24



# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Playlist Processing
MAX_PLAYLIST_SIZE=500
BATCH_SIZE=50
PROCESSING_DELAY_MS=100

# UI Settings
THEME=dark  # Options: light, dark, auto
ENABLE_ANIMATIONS=true
SHOW_ALBUM_ART=true

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=false
